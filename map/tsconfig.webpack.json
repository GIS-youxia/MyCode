{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "allowJs": true,
        "jsx": "react",
        "strict": false,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "lib": [
            "dom",
            "es5",
            "es6",
            "es2015"
        ],
        "types": [
            "node"
        ]
    }
}